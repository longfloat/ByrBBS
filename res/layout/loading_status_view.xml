<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_status_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/loading_status_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_small" />

    <TextView
        android:id="@+id/loading_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_loading_data"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>